<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/prd_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/prd_img"
        android:layout_weight="1"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textColor="#080200" />

    <TextView
        android:id="@+id/newprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/oldprice"
        android:layout_toEndOf="@+id/t2"
        android:layout_toRightOf="@+id/t2"
        android:paddingLeft="10dp"
        android:text="TextView"
        android:textColor="#D30875"
        android:textIsSelectable="false"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/oldprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pname"
        android:layout_toRightOf="@+id/newprice"
        android:paddingLeft="10dp"
        android:text="TextView"
        android:textColor="#D30875"
        android:textSize="12sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/wshlst"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/wishmt"
        android:paddingRight="10dp" />

    <RatingBar
        android:id="@+id/rating"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_below="@+id/oldprice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:numStars="5"
        android:rating="2.5" />

</RelativeLayout>