<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.cviac.olaichuvadi.adapters.PaymentAdapter">

    <ImageView
        android:id="@+id/orderimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/bookgrd" />

    <TextView
        android:id="@+id/prd_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txtprice"
        android:layout_toRightOf="@+id/orderimg"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:text="Product Name" />

    <TextView
        android:id="@+id/txtqa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prd_tit"
        android:layout_toRightOf="@+id/orderimg"
        android:paddingLeft="10dp"
        android:text="Quantity" />

    <TextView
        android:id="@+id/qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prd_tit"
        android:layout_toRightOf="@+id/txtqa"
        android:paddingLeft="10dp"
        android:text="Amount" />

    <TextView
        android:id="@+id/txtprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingRight="10dp"
        android:text="Price" />

</RelativeLayout>