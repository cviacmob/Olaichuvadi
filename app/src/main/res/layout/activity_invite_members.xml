<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.cviac.olaichuvadi.activities.InviteMembersActivity">

    <TextView
        android:id="@+id/invtclub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/invtimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/invtclub_name"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/invtmmbrs"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invtimg"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/edtmmbrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email to Send Invite"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/clk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/invtmmbrs"
        android:layout_below="@+id/invtimg"
        android:layout_toRightOf="@+id/invtmmbrs"
        android:src="@mipmap/comshare" />

    <ListView
        android:id="@+id/invtdlst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/invtmmbrs" />

</RelativeLayout>