<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_orders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/menubg"
    android:padding="5dp"
    tools:context="com.cviac.olaichuvadi.activities.MyOrdersActivity">

    <TextView
        android:id="@+id/ordr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_orders"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/ordrlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ordr" />

</RelativeLayout>
