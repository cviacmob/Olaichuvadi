<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/catimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/prcd_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cattxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        app:srcCompat="@mipmap/click" />

    <TextView
        android:id="@+id/cattxt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/catimg"
        android:layout_toEndOf="@+id/catimg"
        android:layout_toRightOf="@+id/catimg"
        android:gravity="center"
        android:text="TextView"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>
